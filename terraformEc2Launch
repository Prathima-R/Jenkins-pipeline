provider "aws" {
  region     = "ap-south-2"
  access_key = "" 
  secret_key = "" 
}

resource "aws_instance" "ec2" {
  ami           = "ami-0bd4cda58efa33d23"   # Amazon Linux 2 in ap-south-2
  instance_type = "t3.micro"                # Supported in Hyderabad

  vpc_security_group_ids = [" ami-0bd4cda58efa33d23 "]  # Replace with your SG ID 
  key_name               = "window"

  root_block_device {
    volume_size           = 25
    volume_type           = "gp3"
    delete_on_termination = true
  }

  tags = {
    Name = "Admin-Server"
  }

  user_data = file("jenkins-script.sh")
}

output "PublicIP" {
  value = aws_instance.ec2.public_ip
}
